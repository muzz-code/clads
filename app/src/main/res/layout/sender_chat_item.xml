<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="@dimen/margin_11dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/chat_bubble_client"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/sender_chat_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/sender_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/roboto"
                    android:text="2:22PM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_9sp" />
            </LinearLayout>


            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:layout_marginTop="-5.5dp"
                android:layout_marginEnd="3.5dp"
                android:background="@drawable/test_chat_corner_sender"
                android:rotation="90" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>