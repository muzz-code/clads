<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_23dp">

    <TextView
        android:id="@+id/payment_terms_fragment_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/payment_terms"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/payment_terms_fragment_checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_22dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:buttonTint="@color/deep_sky_blue"
        android:paddingLeft="@dimen/margin_5dp"
        android:text="@string/_100_deposit"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/text_size_13sp"
        app:layout_constraintStart_toStartOf="@+id/payment_terms_fragment_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/payment_terms_fragment_header_text_view" />

    <CheckBox
        android:id="@+id/payment_terms_fragment_checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_15dp"
        android:buttonTint="@color/deep_sky_blue"
        android:paddingLeft="@dimen/margin_5dp"
        android:text="@string/_50_deposit_and_50_balance_on_delivery"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/text_size_13sp"
        app:layout_constraintStart_toStartOf="@+id/payment_terms_fragment_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/payment_terms_fragment_checkbox1" />

    <CheckBox
        android:id="@+id/payment_terms_fragment_checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_15dp"
        android:buttonTint="@color/deep_sky_blue"
        android:paddingLeft="@dimen/margin_5dp"
        android:text="@string/_0_deposit_and_100_balance_on_delivery"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/text_size_13sp"
        app:layout_constraintStart_toStartOf="@+id/payment_terms_fragment_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/payment_terms_fragment_checkbox2" />
</androidx.constraintlayout.widget.ConstraintLayout>