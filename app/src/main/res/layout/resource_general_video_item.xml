<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_14dp"
    android:paddingBottom="@dimen/margin_8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/resource_general_video_item_card_view"
        android:layout_width="@dimen/margin_136dp"
        android:layout_height="@dimen/margin_200dp"
        app:cardCornerRadius="@dimen/corner_radius_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/resource_general_video_item_card_image_view"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:src="@drawable/description"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               />

           <View
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/black"
               android:alpha="0.4"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_play"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               />

       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/resource_general_video_item_title_text_view"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="@string/lorem_ipsum_ipsum_sum"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/menu_text_color"
        app:layout_constraintEnd_toEndOf="@+id/resource_general_video_item_card_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/resource_general_video_item_card_view"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_video_item_card_view" />

    <ImageView
        android:id="@+id/resource_general_video_item_clock_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:src="@drawable/vector_clock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/resource_general_video_item_card_view"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_video_item_title_text_view" />

    <TextView
        android:id="@+id/resource_general_video_item_time_text_view"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="@string/hour_30_min"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/menu_text_color"
        android:fontFamily="@font/poppins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resource_general_video_item_title_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/resource_general_video_item_clock_icon_image"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_video_item_title_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>