<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_recycler_view_item_parent_layout"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_11dp"
    android:layout_marginHorizontal="@dimen/margin_16dp"
    android:paddingBottom="@dimen/padding_11dp"
    android:background="@drawable/chat_recycler_view_item_background"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_recycler_view_item_image_view"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="@dimen/margin_11dp"
        android:src="@drawable/edit_profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_recycler_view_item_client_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_16dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/ola_machiavelli"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintBottom_toBottomOf="@id/chat_recycler_view_item_image_view"
        app:layout_constraintStart_toEndOf="@id/chat_recycler_view_item_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/chat_recycler_view_item_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:fontFamily="@font/poppins_medium"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_10sp"
        app:layout_constraintEnd_toEndOf="@+id/chat_recycler_view_item_time_text_view"
        app:layout_constraintStart_toEndOf="@+id/chat_recycler_view_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/chat_recycler_view_item_client_name_text_view" />

        <TextView
            android:id="@+id/chat_recycler_view_item_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:text=""
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_10sp"
            app:layout_constraintBottom_toBottomOf="@+id/chat_recycler_view_item_client_name_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.917"
            app:layout_constraintStart_toEndOf="@+id/chat_recycler_view_item_client_name_text_view"
            app:layout_constraintTop_toTopOf="@+id/chat_recycler_view_item_client_name_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

