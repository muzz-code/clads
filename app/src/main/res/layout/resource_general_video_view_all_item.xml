<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16dp"
    android:layout_marginBottom="@dimen/margin_20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/resource_general_video_view_all_item_card_view"
        android:layout_width="@dimen/margin_136dp"
        android:layout_height="@dimen/margin_200dp"
        app:cardCornerRadius="@dimen/corner_radius_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/resource_general_video_view_all_item_card_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/resource_general_video_view_all_item_title_text_view"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/lorem_ipsum_ipsum_sum"
        android:textColor="@color/menu_text_color"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintEnd_toEndOf="@+id/resource_general_video_view_all_item_card_view"
        app:layout_constraintStart_toStartOf="@+id/resource_general_video_view_all_item_card_view"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_video_view_all_item_card_view" />

    <ImageView
        android:id="@+id/resource_general_video_view_all_item_clock_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:src="@drawable/vector_clock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/resource_general_video_view_all_item_card_view"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_video_view_all_item_title_text_view" />

    <TextView
        android:id="@+id/resource_general_video_view_all_item_time_text_view"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="@string/hour_30_min"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/menu_text_color"
        android:fontFamily="@font/poppins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resource_general_video_view_all_item_title_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/resource_general_video_view_all_item_clock_icon_image"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_video_view_all_item_title_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>