<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/clients_recycler_view_item_initial_circle_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/edit_profile_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clients_recycler_view_item_client_name_text_view" />

        <TextView
            android:id="@+id/clients_recycler_view_item_client_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_16dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/ola_machiavelli"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintStart_toEndOf="@id/clients_recycler_view_item_initial_circle_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clients_recycler_view_item_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/lagos"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clients_recycler_view_item_initial_circle_image_view"
            app:layout_constraintTop_toBottomOf="@+id/clients_recycler_view_item_client_name_text_view"
            app:layout_constraintVertical_bias="0.0"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clients_recycler_view_item_location_text_view"
            tools:layout_editor_absoluteX="18dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>