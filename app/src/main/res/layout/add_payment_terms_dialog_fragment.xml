<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin_30dp"
    tools:context=".ui.profile.editprofile.AddPaymentTermsDialogFragment">

    <TextView
        android:id="@+id/add_payment_fragment_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/add_payment_terms"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_payment_fragment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_23dp"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:helperText="@string/add_payment_terms"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_fragment_header_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_payment_fragment_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_payment_fragment_header_text_view">

        <EditText
            android:id="@+id/add_payment_terms_dialog_fragment_add_payment_terms_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:maxLength="100"
            app:boxStrokeColor="@color/deep_sky_blue" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/add_payment_fragment_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_23dp"
        android:layout_marginVertical="@dimen/margin_24dp"
        android:text="@string/add"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_fragment_edit_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/add_payment_fragment_header_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_payment_fragment_edit_text"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>