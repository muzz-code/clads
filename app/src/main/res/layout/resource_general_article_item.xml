<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_14dp"
    android:layout_marginBottom="@dimen/margin_24dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/resource_general_article_item_card_image_view"
        android:layout_width="@dimen/margin_136dp"
        android:layout_height="@dimen/margin_200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.SelectedCornerRadius"
        android:scaleType="centerCrop"
        android:src="@drawable/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resource_general_article_item_title_text_view"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="@string/stitching_neatly"
        android:textSize="@dimen/text_size_12sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/menu_text_color"
        app:layout_constraintEnd_toEndOf="@+id/resource_general_article_item_card_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/resource_general_article_item_card_image_view"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_article_item_card_image_view" />

    <TextView
        android:id="@+id/resource_general_article_item_author_text_view"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="@string/pope_hope"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/menu_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resource_general_article_item_title_text_view"
        app:layout_constraintStart_toStartOf="@+id/resource_general_article_item_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/resource_general_article_item_title_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>